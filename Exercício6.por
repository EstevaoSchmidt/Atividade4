programa {
  funcao inicio () {
  
    inteiro comprimento
    inteiro largura

    escreva("Qual é a medida, em metros, do comprimento?")
    leia(comprimento)

    escreva("Qual é a medida, em metros, da largura?")
    leia(largura)

    inteiro area = comprimento*largura 
  
    escreva("A area é" area," metros", "O dobro da area é" area*2," metros", "O dobro da area em centímetros é", area*200, " centímetros")
  }
} 
